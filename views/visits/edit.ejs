<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<section>
  <h1>Edit the Visits/h1>
  <form action="/visits/<%= visit._id %>?_method=PUT" method="POST">
    <label>
      Name:
      <input 
        type="text" 
        name="name" 
        autocomplete="off"
        value="<%= visit.name %>"
      >
    </label>
    <label>
      Tasty?
      <input 
        type="checkbox" 
        name="tasty"
        <%= taco.tasty ? "checked" : "" %> 
      >
    </label>
    <button type="submit">Edit the visit</button>
  </form>
</section>

